<div class="bg-white p-6 rounded-lg shadow w-full">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 gap-2">
    <h2 class="text-xl font-semibold text-asmbv-red">Joueurs</h2>
    <%= link_to 'Nouveau joueur', new_admin_player_path, class: 'bg-asmbv-red text-white px-4 py-2 rounded hover:bg-asmbv-redDark text-sm' %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead>
        <tr class="text-left font-medium text-gray-600">
          <th class="px-4 py-2">Nom</th>
          <th class="px-4 py-2">Téléphone</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% @players.each do |player| %>
          <tr>
            <td class="px-4 py-2"><%= player.full_name %></td>
            <td class="px-4 py-2"><%= player.phone %></td>
            <td class="px-4 py-2">
              <%= link_to 'Éditer', edit_admin_player_path(player), class: "text-asmbv-red hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
